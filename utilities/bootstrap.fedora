#!/bin/bash

# GCC build
PACKAGES="bc parted e2fsprogs btrfs-progs bzip2-devel rsync vim-common gcc g++ binutils dwarves elfutils-libelf-devel patchelf libzstd libzstd-devel tree curl gawk git xmltoman docbook-utils swig texinfo python3-docutils"

# CLang build
PACKAGES+=" libedit-devel lua-devel"

# For Image emulation
PACKAGES+=" qemu-user-static"

# for meson-ninja
#PACKAGES+=" python3-pip"

# for Python3
PACKAGES+=" openssl-devel libffi-devel libuuid-devel tcl-devel tk-devl"

# for moode
PACKAGES+=" sqlite"

# for wpa-supplicant
PACKAGES+=" docbook-utils-pdf"

# for libid3tag
PACKAGES+=" gperf"

# for lxml
PACKAGES+=" libxml2-devel"

# for udevil
PACKAGES+=" intltool"

# for dlc-daemon
PACKAGES+=" pandoc"

# for systemd
PACKAGES+=" libxslt docbook-xsl docbook2X"

# for btrfs-progs
PACKAGES+=" asciidoc"

if dnf > /dev/null 2>&1
then
    sudo dnf -y install ${PACKAGES}
else
    sudo yum -y install ${PACKAGES}
fi
