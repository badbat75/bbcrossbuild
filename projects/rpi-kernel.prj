## Set Clang as default compiler set
TOOLCHAIN=llvm

## Enable LTO both for kernel and applications
LTOENABLE=thin
KERN_LTOENABLE=thin

## Enable shared libraries (default) but disable static ones
BUILD_LIBSHARED=1
BUILD_LIBSTATIC=0

LLVM_POLLY_FEATURES=all

setup_gcc --install
setup_llvm
BS_KERNEL=raspberrypi/rpi-kernel_5.16 build raspberrypi/rpi-kernel_5.16
