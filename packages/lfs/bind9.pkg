# bind9
PKG_VER=9.19.7
PKG_URL="https://downloads.isc.org/isc/bind9/${PKG_VER}/bind-${PKG_VER}.tar.xz"
PKG_DEPS="lfs/ncurses lfs/readline lfs/libuv lfs/openssl lfs/libnghttp2 lfs/krb5 \
    lfs/libcap2 lfs/json-c lfs/libxml2"
BUILD_PROCESS=configmake
CONF_VARS="BUILD_CC=\"\${CC_FOR_BUILD}\""
#PKG_MAKETARGETS=""
INST_CMD="install"
PKG_POSTBUILD="mkdir -pv ${PKG_PKGPATH}/usr/share/man/man1
    install -v -v doc/man/{dig.1,host.1,nslookup.1} ${PKG_PKGPATH}/usr/share/man/man1"

