# gmp_6.2.1
PKG_URL="http://ftp.gnu.org/gnu/gmp/gmp-6.2.1.tar.xz"
PKG_DEPS="lfs/ncurses_6.3+p20220820 lfs/readline_8.2"
BUILD_PROCESS=configmake
CONF_FLAGS="--enable-cxx"
INST_CMD="install-strip"
AUTOCONF=1
PKG_OVERRIDELTO=0

PKG_PREBUILD="cat <<EOF | patch -s -p0 || true
--- configure.ac.orig 2021-02-10 23:25:02.279095200 +0100
+++ configure.ac 2021-02-10 23:25:30.259095200 +0100
@@ -3974,7 +3974,8 @@
 LIBCURSES=
 if test \$with_readline != no; then
   AC_CHECK_LIB(ncurses, tputs, [LIBCURSES=-lncurses],
-    [AC_CHECK_LIB(curses, tputs, [LIBCURSES=-lcurses])])
+    [AC_CHECK_LIB(ncursesw, tputs, [LIBCURSES=-lncursesw],
+      [AC_CHECK_LIB(curses, tputs, [LIBCURSES=-lcurses])])])
 fi
 AC_SUBST(LIBCURSES)
 use_readline=\$with_readline
EOF
cp -v configfsf.guess config.guess
cp -v configfsf.sub   config.sub
"