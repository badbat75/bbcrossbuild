# icu_71.1
PKG_URL="https://github.com/unicode-org/icu/releases/download/release-71-1/icu4c-71_1-src.tgz"
BUILD_PROCESS=configmake
AUTOCONF=1
AUTOCONF_PATH="source"
CONF_CMD="source/configure"
CONF_FLAGS="--with-cross-build=\${PKG_BLDPATH}/host_build ac_cv_c_bigendian=no"
INST_CMD="install"
#PATCHDEB=""
PKG_PREBUILD="if [ ! -d host_build ]; then
                mkdir -pv \${PKG_BLDPATH}/host_build
                pushd \${PKG_BLDPATH}/host_build
                CC=\"${CCWRAPPER:+${CCWRAPPER} }${BARCH}-gcc\" CXX=\"${CCWRAPPER:+${CCWRAPPER} }${BARCH}-g++\" \${PKG_SRCPATH}/source/configure
                make
                popd
                pwd
            fi"
PKG_POSTBUILD=""