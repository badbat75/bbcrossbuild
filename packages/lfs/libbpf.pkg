# libbpf
PKG_VER=1.1.0
PKG_URL="https://github.com/libbpf/libbpf/archive/refs/tags/v${PKG_VER}.tar.gz"
BUILD_PROCESS=simplemake
PKG_MAKEVARS="-C src LIBSUBDIR=/lib${HARCH_LIB}${INSTALL_LIBSUFFIX}"
