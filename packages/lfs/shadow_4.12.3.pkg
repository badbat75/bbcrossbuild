# shadow_4.12.3
PKG_URL="https://github.com/shadow-maint/shadow/releases/download/4.12.3/shadow-4.12.3.tar.xz"
#PKG_DEPS="lfs/cracklib_2.9.7"
BUILD_PROCESS=configmake
PKG_AUTOCONF=1
CONF_FLAGS="--with-group-name-max-length=32"
INST_CMD="install-strip"

PKG_PREBUILD="sed -i 's/groups\\\$(EXEEXT) //' src/Makefile.in
	find man -name Makefile.in -exec sed -i 's/groups\.1 / /'   {} \;
	find man -name Makefile.in -exec sed -i 's/getspnam\.3 / /' {} \;
	find man -name Makefile.in -exec sed -i 's/passwd\.5 / /'   {} \;"
PKG_POSTBUILD="sed -e 's:#ENCRYPT_METHOD DES:ENCRYPT_METHOD SHA512:' \
		-e 's:/var/spool/mail:/var/mail:' \
		-i ${PKG_PKGPATH}${BUILD_SYSCONFDIR}/login.defs
	mkdir -pv ${PKG_PKGPATH}/var/mail"
