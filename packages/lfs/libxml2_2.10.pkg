PKG_DEPS="lfs/ncurses_6 lfs/readline_8.2 lfs/icu_72 lfs/python3"
BUILD_PROCESS=configmake
PKG_AUTOCONF=1
CONF_FLAGS="--with-history --with-icu --with-threads PYTHON=$(which python3)"
