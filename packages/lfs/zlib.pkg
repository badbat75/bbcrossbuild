# zlib
PKG_VER=1.2.13
PKG_URL="https://zlib.net/zlib-${PKG_VER}.tar.xz"
VAR_INSTALL_LIBDIR=INSTALL_LIB_DIR
VAR_INSTALL_INCDIR=INSTALL_INC_DIR
BUILD_PROCESS=cmakebuild
CONF_FLAGS="-DINSTALL_PKGCONFIG_DIR=${INSTALL_LIBDIR}${INSTALL_LIBSUFFIX}/pkgconfig"
PKG_CXXFLAGS="-D_FILE_OFFSET_BITS=64"
INST_CMD="install/strip"

case ${TOOLCHAIN} in
    llvm) PKG_CFLAGS="-Wno-deprecated-non-prototype";;
esac