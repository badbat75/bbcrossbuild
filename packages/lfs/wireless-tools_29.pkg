# wireless-tools_29
PKG_URL="https://hewlettpackard.github.io/wireless-tools/wireless_tools.29.tar.gz"
PATCHES="http://www.linuxfromscratch.org/patches/blfs/svn/wireless_tools-29-fix_iwlist_scanning-1.patch"
BUILD_PROCESS=simplemake
INST_CMD=install
PKG_DEPS="lfs/libnl_3.7.0"
PKG_MAKEVARS="CFLAGS=\"\${CFLAGS}\" LIBS=\"\${LDFLAGS} -lm\" BUILD_STRIPPING=1 PREFIX=${PKG_PKGPATH}${BUILD_PREFIX}"
PKG_PREBUILD="sed -i -e 's/^CC =/CC ?=/' -e 's/^AR =/AR ?=/' -e 's/^RANLIB =/RANLIB ?=/' Makefile
    sed -i '/^INSTALL_LIB=/ s|/lib/$|/lib\$(LIBSUFFIX)/|' Makefile"