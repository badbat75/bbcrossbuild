# openssl
PKG_VER=3.0.8
PKG_URL="https://www.openssl.org/source/openssl-${PKG_VER}.tar.gz"
PKG_DEPS="lfs/zlib"
CONF_COPYRSC=1
CONF_CMD="Configure"
STD_CONF_FLAGS=0
CONF_FLAGS="--prefix=${INSTALL_PREFIX} --openssldir=${INSTALL_SYSCONFDIR}/ssl $(
    case x${HARCH} in
    xarm-linux-*)
        echo linux-generic32 
        ;;
    *)
        echo ${HOS}-${HM}
        ;;
    esac
    ) shared zlib-dynamic no-tests"
BUILD_PROCESS=configmake
#PKG_MAKETARGETS="all,install"
PKG_MAKEVARS="MANSUFFIX=ssl LIBDIR=lib${HARCH_LIB}${INSTALL_LIBSUFFIX}"
case ${TOOLCHAIN} in
    llvm) PKG_CFLAGS="-std=gnu99";;
esac