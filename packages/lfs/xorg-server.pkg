# Xserver
PKG_VER=21.1.7
PKG_URL="https://www.x.org/pub/individual/xserver/xorg-server-${PKG_VER}.tar.xz"
PKG_DEPS="lfs/wayland-protocols"
PKG_DEPS+=" lfs/xorgproto"
PKG_DEPS+=" lfs/xkbcomp"
