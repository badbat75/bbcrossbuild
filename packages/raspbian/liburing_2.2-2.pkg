# liburing_2.2-2
PKG_URL="http://archive.raspbian.org/raspbian/pool/main/libu/liburing/liburing_2.2.orig.tar.gz"
PATCHDEB="http://archive.raspbian.org/raspbian/pool/main/libu/liburing/liburing_2.2-2.debian.tar.xz"
PKG_COPYSRC=1
BUILD_PROCESS=configmake
STD_CONF_FLAGS=0
CONF_FLAGS="--prefix=${INSTALL_PREFIX} \
	  --includedir=${INSTALL_INCLUDEDIR} \
	  --datadir=/usr/share \
	  --mandir=/usr/share/man \
	  --libdir=${INSTALL_LIBDIR}${INSTALL_LIBSUFFIX} \
	  --libdevdir=${INSTALL_LIBDIR}${INSTALL_LIBSUFFIX} \
	  --cc=\"\${CC}\" \
      --cxx=\"\${CXX}\""
INST_CMD=install
PKG_POSTBUILD="\${STRIP} -s ${PKG_PKGPATH}${INSTALL_LIBDIR}${INSTALL_LIBSUFFIX}/liburing.so.*"

PKG_TOOLCHAIN=gnu