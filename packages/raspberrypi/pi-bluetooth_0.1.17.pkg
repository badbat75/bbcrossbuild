# pi-bluetooth_0.1.17
PKG_URL="https://github.com/RPi-Distro/pi-bluetooth/archive/23af66cff597c80523bf9581d7f75d387227f183.tar.gz"
BUILD_PROCESS=downloadonly
PKG_DEPS="raspberrypi/raspberrypi-sys-mods_20211005"
PKG_PREBUILD="install -d -m0755 ${PKG_PKGPATH}\${BUILD_PREFIX}/bin
    install -d -m0755 ${PKG_PKGPATH}\${BUILD_SYSCONFDIR}/systemd/system
    install -d -m0755 ${PKG_PKGPATH}/lib/udev/rules.d
    install -m 0755 -D usr/bin/btuart ${PKG_PKGPATH}\${BUILD_PREFIX}/bin/
    install -m 0755 -D usr/bin/bthelper ${PKG_PKGPATH}\${BUILD_PREFIX}/bin/
    install -m 0644 -D debian/pi-bluetooth.hciuart.service ${PKG_PKGPATH}\${BUILD_SYSCONFDIR}/systemd/system/hciuart.service
    install -m 0644 -D debian/pi-bluetooth.bthelper@.service ${PKG_PKGPATH}\${BUILD_SYSCONFDIR}/systemd/system/bthelper@.service
    install -m 0644 -D lib/udev/rules.d/90-pi-bluetooth.rules ${PKG_PKGPATH}/lib/udev/rules.d/90-pi-bluetooth.rules
    systemctl --root=${PKG_PKGPATH} enable hciuart"