install -D -m 0644 /dev/null ${BIN_PATH}/var/log/mpd/log
install -D -m 0666 /dev/null ${BIN_PATH}/var/log/moode.log
install -D -m 0666 /dev/null ${BIN_PATH}/var/log/php_errors.log
