ln -fs /mnt/NAS ${BIN_PATH}/var/lib/mpd/music/NAS
ln -fs /mnt/SDCARD ${BIN_PATH}/var/lib/mpd/music/SDCARD
[ ! -e ${BIN_PATH}/var/lib/mpd/music/USB ] && ln -fs /media ${BIN_PATH}/var/lib/mpd/music/USB
